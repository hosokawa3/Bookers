<h1>Books</h1>

<% @books.each do |book| %>

  <h3>Title</h3>
  <span><%= book.title %></span>

  <h3>Body</h3>
  <span><%= book.body %></span>

  <span>
    <%= link_to 'Show' , book_path(book.id) %>
  </span>
  <span>
    <%= link_to 'Edit' , edit_book_path(book.id) %>
  </span>

<% end %>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>